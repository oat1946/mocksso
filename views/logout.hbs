<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>mockSSO</title>
    <meta name="description" content="Simulate SSO">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>{{css}}</style>
  </head>
  <body>
    <div class="row">
      <h4>You are logged-in as</h4>
    </div>
    <div class="row">
      <h3>{{user}}</h3>
    </div>
    <div class="row">
      <button onClick="logout()">logout</button>
    </div>
  </body>
  <script>
    function logout() {
      const f = document.createElement("form")
      f.action = "/logout"
      f.method = "POST"
      document.body.appendChild(f)
      f.submit()
    }
  </script>
</html>
